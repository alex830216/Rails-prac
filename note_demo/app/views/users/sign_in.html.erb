<h1>會員登入</h1>

<%# url: login_path，使用 POST 方法，因為要寫入資料庫 %>
<%= form_for(@user, url: login_path) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Login" %>
<% end %>
